<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Booking</title>
</head>
<body>
  <h1>Edit Booking</h1>
  <form action="/booking/edit/<%= booking._id %>?_method=PUT" method="POST">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="<%= booking.username %>" required><br>

    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= booking.name %>" required><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= booking.email %>" required><br>

    <label for="phoneNum">Phone Number:</label>
    <input type="tel" id="phoneNum" name="phoneNum" value="<%= booking.phonenum %>" required><br>

    <label for="eventOccasion">Event Occasion:</label>
    <input type="text" id="eventOccasion" name="eventOccasion" value="<%= booking.eventOccasion %>" required><br>

    <label for="services">Services:</label>
    <input type="text" id="services" name="services" value="<%= booking.services %>" required><br>

    <label for="numPeople">Number of People:</label>
    <input type="number" id="numPeople" name="numPeople" value="<%= booking.numPeople %>" required><br>

    <label for="eventDate">Event Date:</label>
    <input type="date" id="eventDate" name="eventDate" value="<%= booking.eventDate.toISOString().split('T')[0] %>" required><br>

    <label for="startTime">Start Time:</label>
    <input type="time" id="startTime" name="startTime" value="<%= booking.startTime %>" required><br>

    <label for="endTime">End Time:</label>
    <input type="time" id="endTime" name="endTime" value="<%= booking.endTime %>" required><br>

    <label for="location">Location:</label>
    <input type="text" id="location" name="location" value="<%= booking.location %>" required><br>

    <label for="message">Message:</label>
    <textarea id="message" name="message"><%= booking.message %></textarea><br>

    <button type="submit">Update Booking</button>
  </form>
</body>
</html>

